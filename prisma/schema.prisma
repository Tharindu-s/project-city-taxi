generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id      Int    @id @default(autoincrement())
  name    String
  status  String
  regDate String
  userId  Int    @unique
}

model Users {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  username String   @unique
  password String
  type     String
  regDate  DateTime
  guestId  Int
}

model Ride {
  id             Int    @id @default(autoincrement())
  pickupLocation String
  dropLocation   String
  status         String
  startTime      String
  endTime        String
  amount         String
  distant        String
  paymentMethod  String
  passengerId    String
  driverId       String
}

model Rate {
  id   Int    @id @default(autoincrement())
  rate String
}

model RideRating {
  id             Int    @id @default(autoincrement())
  rating         String
  comment        String
  safeDrive      String
  professional   String
  routeExpertise String
  onTime         String
  vehicleState   String
  driverId       String
  rideId         String
}

model PassengerDetails {
  id         Int     @id @default(autoincrement())
  name       String
  contact    String
  userId     Int?    @unique
  isVerified Boolean @default(false)
  city       String
  email      String  @unique
  gender     String
  photoUrl   String
  type       String  @default("passenger")
}

model DriverDetails {
  id            Int      @id @default(autoincrement())
  licenceNo     String
  name          String
  nic           String
  dob           String
  status        String?  @default("available")
  contact       String
  userId        Int?     @unique
  isVerified    Boolean  @default(false)
  city          String
  email         String?  @unique
  gender        String
  type          String   @default("driver")
  date          DateTime
  vehicleId     String?
  location      String?
  driverImgUrl  String?
  insuranceImg  String?
  licenceImg    String?
  revLicenceImg String?
}

model vehicleDetails {
  id            Int     @id @default(autoincrement())
  number        String  @unique
  type          String
  seatCount     Int
  imgUrl1       String
  imgUrl2       String
  imgUrl3       String
  make          String
  rateId        String?
  revLicenceUrl String
  insuaranceNo  String
  driverId      String
  insuaranceExp String
  revLicenceExp String
}

model passwordResetTokens {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
}
